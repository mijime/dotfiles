[core]
	editor = vim -c \"set fenc=utf-8\"
	filemode = false
	safecrlf = false
	autocrlf = input
	excludesfile = ~/.gitignore.global
	quotepath = false
[color]
	ui = auto
[alias]
	b  = branch --all --verbose
	s  = status --short --branch
	d  = diff
	ds = diff --staged
	l  = log --graph --abbrev-commit --pretty='%C(red)%h %C(reset)%s%C(yellow)%d %C(green)(%cd) %C(blue)<%an>' --date=short
	ll = log --graph --abbrev-commit --pretty=full --stat
	lc = log --reverse --abbrev-commit --pretty='%C(red)%h %C(reset)%s' --date=short
[push]
	default = simple
[ghq]
	root = ~/src
[commit]
	verbose = true
	gpgsign = true
[merge]
	ff = false
[pull]
	ff = only
[include]
	path = ~/.gitconfig.local
[init]
	defaultBranch = main

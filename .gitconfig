[core]
    editor = vim -c \"set fenc=utf-8\"
    filemode = false
[color]
    ui = auto
[alias]
    ignore   = update-index --assume-unchanged
    unignore = update-index --no-assume-unchanged
    ignored  = !git ls-files -v | grep "^h"
    s        = status --short --branch
    d        = diff
    ds       = diff --staged
    l        = log --graph --date=relative --abbrev-commit --all --pretty='%C(red)%h %C(reset)%s%C(yellow)%d %C(green)(%cr) %C(blue)<%an>'
    ll       = log --graph --date=relative --abbrev-commit --pretty=full --stat
    push-branch = !git push --set-upstream origin $(git branch | awk '/^*/{print$2}')
[include]
    path = ~/.gitconfig.local
[push]
    default = simple
[ghq]
    root = ~/

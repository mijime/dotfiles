set imap_check_subscribed
set imap_keepalive=300
unset imap_passive

set mail_check=300
set mbox_type=Maildir
set header_cache=~/.cache/mutt/header
set message_cachedir=~/.cache/mutt/message

color attachment red     default
color hdrdefault blue    default
color indicator  green   default
color markers    blue    default
color quoted     green   default
color signature  blue    default
color status     green   default
color tilde      yellow  default
color tree       red     default

color header brightgreen default ^From:
color header brightcyan  default ^To:
color header brightcyan  default ^Reply-To:
color header brightcyan  default ^Cc:
color header brightcyan  default ^Date:
color header brightblue  default ^Subject:

bind pager j next-line
bind pager k previous-line
bind pager g top
bind pager G bottom
bind attach,index,pager \CD next-page
bind attach,index,pager \CU previous-page
bind attach,index g first-entry
bind attach,index G last-entry

source ~/.mutt/accounts/index.muttrc

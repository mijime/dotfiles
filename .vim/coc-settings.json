{
  "languageserver": {
    "efm": {
      "command": "efm-langserver",
      "rootPatterns": [
        ".git",
        ".vim"
      ],
      "filetypes": [
        "markdown"
      ]
    },
    "go": {
      "command": "gopls",
      "rootPatterns": [
        "go.mod",
        ".git",
        ".vim"
      ],
      "filetypes": [
        "go"
      ]
    }
  }
}

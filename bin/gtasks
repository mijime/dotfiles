#!/usr/bin/env bash

set -Eeuo pipefail

beareq_cache_key=$(date +%F)
beareq_with_cache() {
  cache_file="/tmp/$(basename "$0")-$(echo "$* ${beareq_cache_key}" | md5sum | awk '{print$1}').dat"
  if [[ ! -f "${cache_file}" ]]; then
    beareq "${@}" >"${cache_file}"
  fi
  cat "${cache_file}"
}

gtasks_tasklist() {
  beareq_with_cache --profile="${profile}" \
    "https://tasks.googleapis.com/tasks/v1/users/@me/lists" |
    jq -rc '.items[] | [.id,.title] | @tsv'
}

gtasks_list() {
  beareq --profile="${profile}" \
    "https://tasks.googleapis.com/tasks/v1/lists/${tasklist}/tasks?showCompleted=false" |
    jq -rc '.items[] | [.id,.due,.title] | @tsv'
}

gtasks_add() {
  tmpfile=$(mktemp --suffix=.toml)
  trap 'rm "${tmpfile}"' EXIT
  due=${due:-$(date --rfc-3339=seconds --date "7days" | sed -e 's/ /T/')}
  echo "{\"title\":\"${title}\",\"notes\":\"\",\"due\":\"${due}\"}" |
    yj -jt >"${tmpfile}"
  ${EDITOR:-vim} "${tmpfile}"

  beareq --profile="${profile}" \
    --header="Content-type: application/json" \
    --request="POST" \
    --data="$(yj -tj <"${tmpfile}")" \
    "https://tasks.googleapis.com/tasks/v1/lists/${tasklist}/tasks" |
    jq -rS
}

gtasks_show() {
  beareq --profile="${profile}" \
    "https://tasks.googleapis.com/tasks/v1/lists/${tasklist}/tasks/${task}" |
    jq -rS
}

gtasks_delete() {
  beareq --profile="${profile}" \
    --request="DELETE" \
    "https://tasks.googleapis.com/tasks/v1/lists/${tasklist}/tasks/${task}" |
    jq -rS
}

gtasks_patch() {
  beareq --profile="${profile}" \
    --header="Content-type: application/json" \
    --request="PATCH" \
    --data="$*" \
    "https://tasks.googleapis.com/tasks/v1/lists/${tasklist}/tasks/${task}" |
    jq -rS
}

gtasks_update() {
  beareq --profile="${profile}" \
    --header="Content-type: application/json" \
    --request="PUT" \
    --data="$*" \
    "https://tasks.googleapis.com/tasks/v1/lists/${tasklist}/tasks/${task}" |
    jq -rS
}

gtasks_edit() {
  tmpfile=$(mktemp --suffix=.toml)
  trap 'rm "${tmpfile}"' EXIT
  resp=$(gtasks_show)
  echo "${resp}" |
    yj -jt >"${tmpfile}"
  ${EDITOR:-vim} "${tmpfile}"

  gtasks_update "$(yj -tj <"${tmpfile}")"
}

gtasks_done() {
  gtasks_patch "{\"status\":\"completed\"}"
}

profile=${GTASKS_PROFILE:-"default"}
tasklist=${GTASKS_TASKLIST:-""}
task=${GTASKS_TASK:-""}
title=
due=
cmd=${GTASKS_CMD:-""}
while [[ $# -gt 0 ]]; do
  case $1 in
  --profile=*)
    profile=${1#*=}
    ;;
  --tasklist=*)
    tasklist=${1#*=}
    ;;
  --task=*)
    task=${1#*=}
    ;;
  --title=*)
    title=${1#*=}
    ;;
  --due=*)
    due=$(date --rfc-3339=seconds --date "${1#*=}" | sed -e 's/ /T/')
    ;;
  add | list | edit | show | delete | done)
    cmd=$1
    ;;
  *)
    echo "$*" >&2
    exit 1
    ;;
  esac
  shift
done

if [[ -z ${tasklist} ]]; then
  resp=$(gtasks_tasklist)
  tasklist=$(echo "${resp}" | fzf --select-1 | awk -F"\t" '{print$1}')
fi

case ${cmd} in
add)
  gtasks_add
  exit
  ;;

list)
  gtasks_list
  exit
  ;;
esac

if [[ -z "${task}" ]]; then
  resp=$(gtasks_list)
  task=$(echo "${resp}" | fzf --select-1 | awk -F"\t" '{print$1}')
fi

if [[ -z "${cmd}" ]]; then
  cmd=$(echo -e "show\nedit\ndone\ndelete\n" | fzf)
fi

case ${cmd} in
edit) gtasks_edit ;;
done) gtasks_done ;;
show) gtasks_show ;;
delete) gtasks_delete ;;
esac

#!/usr/bin/env bash

set -Eeuo pipefail

title="from terminal"
while [[ $# -gt 0 ]]; do
  case $1 in
  -t | --title)
    title=$2
    shift
    ;;
  -c | --content)
    content=$2
    shift
    ;;
  *)
    content=$1
    ;;
  esac
  shift
done

osascript -e "display notification \"${content}\" with title \"${title}\""

#!/bin/bash

while true
do
    case $1 in
    --length|-l)
        length=$2
        shift 2 || break
        ;;
    --numeric|-n)
        chars="${chars}0123456789"
        shift || break
        ;;
    --hex|-h)
        chars="${chars}0123456789abcdef"
        shift || break
        ;;
    --alpha-lower|-a)
        chars="${chars}abcdefghijklmnopqrstuvwxyz"
        shift || break
        ;;
    --alpha-upper|-A)
        chars="${chars}ABCDEFGHIJKLMNOPQRSTUVWXYZ"
        shift || break
        ;;
    --specical-char|-s)
        chars="${chars}$2"
        shift 2 || break
        ;;
    --specical-chars|-S)
        chars="$2"
        shift 2 || break
        ;;
    *) shift || break ;;
    esac
done

tr -c -d "${chars:-'0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ{}()*+=@&#'}" </dev/urandom |
    dd bs="${length:-12}" count=1 2>/dev/null

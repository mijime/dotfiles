#!/bin/bash

cd /usr/local/src/vim \
  && git fetch \
  && git pull \
  && make clean \
  && ./configure \
    --with-features=huge \
    --enable-multibyte \
    --enable-fontset \
    --enable-perlinterp \
    --enable-rubyinterp \
    --enable-pythoninterp \
    --enable-python3interp \
    --enable-luainterp \
    --with-lua-prefix=/usr/local \
    --enable-gpm \
    --enable-cscope \
  && make install

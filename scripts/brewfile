#!/usr/bin/env ruby
# frozen_string_literal: true

add %w[
  bat
  cmake
  direnv
  fzf
  ghq
  graphviz
  jq
  nkf
  pwgen
  starship
  tmux
  tree
  vim

  git
  gibo
  tig
  hub
  git-secret

  awscli
  azure-cli

  terraformer
  tfenv

  circleci

  go
  goenv
  node

  protobuf
  shellcheck
  vegeta
  golangci/tap/golangci-lint

  kind
  kubernetes-cli
  kustomize
  helm
  skaffold
  stern
]

if ENV['BREW_MACHINE_NAME'] == 'home'
  add :w3m
  add :slackcat
end


if platform? :darwin
  add %i[
    datawire/blackbird/telepresence
  ]
  add 'osxfuse', cmdlist: %i[brew cask]

  add %w[
    bash
    gawk
    coreutils
    findutils

    rust
    python
    pipenv

    reattach-to-user-namespace
  ]

  add_with :cask do
    %w[
      docker
      firefox
      google-chrome
      google-cloud-sdk
      keepassxc
    ]
  end
end

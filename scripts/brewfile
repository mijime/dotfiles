#!/usr/bin/env ruby
# frozen_string_literal: true

add %i[
  bat
  cmake
  direnv
  fzf
  ghq
  graphviz
  jq
  nkf
  pwgen
  starship
  tmux
  tree
  vim

  git
  gibo
  tig
  hub
  git-secret

  awscli
  azure-cli

  terraformer
  tfenv

  circleci

  go
  goenv
  node
  elm
  rust

  protobuf
  shellcheck
  vegeta
  golangci/tap/golangci-lint

  kind
  kubernetes-cli
  kustomize
  helm
  skaffold
  stern
]

if ENV['BREW_MACHINE_NAME'] == 'home'
  add :w3m
  add :slackcat
end

if platform? :darwin
  add 'datawire/blackbird/telepresence'
  add_with :cask do
    :osxfuse
  end

  add %i[
    bash
    gawk
    coreutils
    findutils

    python
    pipenv

    reattach-to-user-namespace
  ]

  add_with :cask do
    %i[
      docker
      firefox
      google-chrome
      google-cloud-sdk
      keepassxc
    ]
  end
end
